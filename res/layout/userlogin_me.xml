<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_view_bkg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_title_height"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/title_tv_style"
                android:text="登录" />

            <TextView
                android:id="@+id/title_back"
                style="@style/title_back_tyle" />

            <TextView
                android:id="@+id/userlogin_reg"
                style="@style/title_right_tv_style"
                android:padding="10dip"
                android:text="注册" />
        </RelativeLayout>

        <EditText
            android:id="@+id/user_input_mail"
            style="@style/user_login_et_style"
            android:drawableLeft="@drawable/user_input_account"
            android:hint="请输入注册的邮箱帐号"
            android:inputType="textEmailAddress" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@drawable/user_login_sprator" />

        <EditText
            android:id="@+id/user_input_password"
            style="@style/user_login_et_style"
            android:drawableLeft="@drawable/user_input_pwd"
            android:hint="输入密码"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/user_button_bg"
            android:onClick="onClick"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_forgetpwd"
                style="@style/user_forget_pwd_style"
                android:text="忘记密码？" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_margin="10dip"
                android:background="@color/color_txt_dark_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/color_view_bkg"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="使用下列帐号登录"
                android:textColor="@color/color_txt_dark_gray" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/login_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip" >

            <ImageButton
                android:id="@+id/login_by_qq"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/user_login_qq" />

            <ImageButton
                android:id="@+id/login_by_sina"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/user_login_sina" />

            <ImageButton
                android:id="@+id/login_by_weixin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/user_login_weixin" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>